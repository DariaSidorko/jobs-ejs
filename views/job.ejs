
<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>

<h2><%= job ? "Edit Job" : "Add Job" %></h2>
<form method="POST" action="<%= job ? '/jobs/update/' + job._id : '/jobs' %>">
  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
  <input name="company" placeholder="Company" value="<%= job?.company || '' %>" />
  <input name="position" placeholder="Position" value="<%= job?.position || '' %>" />
  <label>Status</label>
    <select name="status">
    <option value="interview">Interview</option>
    <option value="pending" selected>Pending</option>
    <option value="declined">Declined</option>
    </select>
  <button><%= job ? "Update" : "Add" %></button>
</form>
